@import 'nib'

global-reset()


maxwidth = 600px
search-bar-height = 35px
search-width = 350px

centered(selfSize)
  maxwidth / 2 - selfSize / 2

body
  box-sizing border-box
  width 100%
  height 100%
  main
    max-width maxwidth
    margin 10px auto
    .flex-container
      display flex
      flex-wrap wrap
      max-width maxwidth
      min-height 500px
      background red
      justify-content flex-start

    .flex-item
      flex-basis 200px
      flex-grow 0
      position relative
      //padding 2px
      background yellow
      max-height: 250px

      .hero-img
        height 100%
        object-fit cover
        width 100%

    .close-btn
      position absolute
      right 0

    .search-wrapper
      position relative
      .search
        position absolute
        width 100%
        text-align center
        // display flex
        // flex-direction column
        top -(search-bar-height/2)px

        .search-bar
          box-sizing border-box
          //position absolute
          height search-bar-height
          //top -(@height/2)px
          width search-width
          //left centered(@width)
          margin auto
          text-align center

        .search-list
          width search-width - 15px
          margin auto
          background blue

          li
            padding 0.4rem
            transition padding 0.1s
            &:nth-child(even)
              background green
            &:hover
              padding @padding*2
